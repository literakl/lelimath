<?xml version="1.0" encoding="utf-8"?>
<!--http://stackoverflow.com/questions/27496916/how-to-set-state-selected-in-ripple-drawable-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">

    <item>
        <selector>
            <item android:state_selected="true" android:drawable="@drawable/ic_pink_button_normal"/>
            <item android:drawable="@drawable/ic_light_blue_button_normal"/>
        </selector>
    </item>
</ripple>