<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Formula">
        <!--<item name="android:background">@color/gray_215</item>-->
    </style>

    <style name="PuzzleTileButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/gray_79</item>
        <!--<item name="android:colorPrimary">@color/gray_79</item> API 21 required -->
    </style>

    <style name="KeypadButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/keypad_button_text</item>
        <item name="android:textColor">@color/gray_79</item>
        <!--<item name="android:background">@drawable/keypad_button_bg</item>-->
        <item name="android:background">@color/white</item>
        <item name="android:padding">30.0dip</item>
    </style>

    <style name="KeypadFunctionButton" parent="@style/KeypadButton">
        <item name="android:textColor">@color/gray_35</item>
    </style>

    <style name="FormulaValue" parent="@style/KeypadButton">
    </style>

    <style name="FormulaUnknownValue" parent="@style/FormulaValue">
        <item name="android:background">@drawable/unknown_box</item>
    </style>

    <style name="FormulaEqualSign" parent="@style/KeypadButton">
    </style>

</resources>
