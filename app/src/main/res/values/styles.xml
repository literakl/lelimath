<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextStyle">@color/colorTitleText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="AppTheme.SettingsTheme.Toolbar" parent="AppTheme.SettingsTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>

    <style name="Invisible" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Formula">
        <item name="android:textSize">@dimen/calc_button_text</item>
        <item name="android:textColor">@color/calc_digit</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/lcd</item>
        <item name="android:layout_marginTop">@dimen/calc_big_margin</item>
        <item name="android:layout_marginBottom">@dimen/calc_superbig_margin</item>
        <item name="android:layout_marginLeft">@dimen/calc_big_margin</item>
        <item name="android:layout_marginRight">@dimen/calc_big_margin</item>
    </style>

    <style name="KeypadButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/calc_button_text</item>
        <item name="android:textColor">@color/calc_digit</item>
        <item name="android:background">@drawable/blue_button_light</item>
        <item name="android:layout_marginLeft">@dimen/calc_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/calc_small_margin</item>
<!--
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:minWidth">44dp</item>
-->
    </style>

    <style name="KeypadLeftButton" parent="@style/KeypadButton">
        <item name="android:layout_marginLeft">@dimen/calc_big_margin</item>
    </style>

    <style name="KeypadFunctionButton" parent="@style/KeypadButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/blue_button_dark</item>
    </style>

    <style name="KeypadFunctionRightButton" parent="@style/KeypadFunctionButton">
        <item name="android:layout_marginRight">@dimen/calc_big_margin</item>
    </style>

    <style name="KeypadNextButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/tl_next</item>
        <item name="android:textSize">@dimen/calc_button_text</item>
        <item name="android:layout_marginTop">@dimen/calc_big_margin</item>
        <item name="android:layout_marginBottom">@dimen/calc_big_margin</item>
        <item name="android:layout_marginLeft">@dimen/calc_big_margin</item>
        <item name="android:layout_marginRight">@dimen/calc_big_margin</item>
    </style>

    <style name="PuzzleTile" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/gray_79</item>
        <!--<item name="android:background">@drawable/blue_button</item>-->
    </style>

    <style name="PlayRecordHeader" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/gray_79</item>
    </style>

    <style name="PlayRecordTime" parent="@style/Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray_79</item>
    </style>

    <style name="DressPriceOK" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_price_ok</item>
    </style>

    <style name="DressPriceDisabled" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_price</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_35</item>
    </style>

    <style name="TextAppearance.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextAppearance.SubHeader">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextAppearance.Item">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_35</item>
    </style>

    <style name="TextComponent"/>

    <style name="TextComponent.ItemRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="TextComponent.ItemRow.Selectable">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
